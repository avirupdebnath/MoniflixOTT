<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context=".UI.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/default_background">
        <fragment
            android:id="@+id/main_browse_fragment"
            android:name="com.example.myottapp.UI.MainFragment"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
    </FrameLayout>
    <FrameLayout
            android:id="@+id/details_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="0dp"
            android:background="@drawable/default_background">
            <ImageView
                android:id="@+id/movie_poster"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:gravity="right"
                android:layout_gravity="right"
                android:src="@drawable/movie">
            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_gravity="left"
                android:background="@drawable/black_to_transparent_shade_horizontal">
                <TextView
                    android:id="@+id/movie_name"
                    android:layout_height="wrap_content"
                    android:layout_width="600dp"
                    android:layout_alignParentTop="true"
                    android:text="Movie Name"
                    android:layout_marginLeft="50dp"
                    android:textSize="40sp"
                    android:layout_marginBottom="5dp">
                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/movie_language"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentTop="true"
                        android:text="Japanese"
                        android:textSize="10sp">
                    </TextView>
                    <TextView
                        android:id="@+id/movie_time"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentTop="true"
                        android:text="1 Hr 24 Min"
                        android:textSize="10sp">
                    </TextView>
                    <TextView
                        android:id="@+id/movie_age"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentTop="true"
                        android:text="18+"
                        android:textSize="10sp">
                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/movie_desrciption"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_width="500dp"
                    android:layout_alignParentTop="true"
                    android:text="This is a small description of what can be called a movie in the making. People have almost died in making this a reality."
                    android:textSize="15sp">
                </TextView>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/carousal_frame"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="top"
            android:layout_margin="0dp"
            android:background="@drawable/default_background">
            <fragment
                android:id="@+id/carousal_fragment"
                android:name="com.example.myottapp.UI.CarousalFragment"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
        </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/banner_linear_layout"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:focusable="false"
        android:background="@drawable/text_black_to_transparent_shade">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:src="@mipmap/ic_banner_foreground"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <fragment
            android:id="@+id/banner_fragment"
            android:name="com.example.myottapp.UI.BannerFragment"
            android:layout_width="900dp"
            android:layout_height="40dp"
            android:layout_gravity="right" />


    </FrameLayout>

</FrameLayout>

