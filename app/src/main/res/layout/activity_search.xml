<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="afterDescendants"
    android:background="@color/background_gradient_start">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp">

        <TextView
            android:layout_width="300dp"
            android:id="@+id/search_key"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:text=" Search For Movies, Series..."
            android:gravity="center_vertical"
            android:background="@drawable/white_border"
            android:padding="5dp"
            android:textColor="@color/white">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:id="@+id/search_keyboard_fragment"
                android:name="com.example.myottapp.UI.SearchKeyboardFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <fragment
            android:id="@+id/search_fragment"
            android:name="com.example.myottapp.UI.SearchFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transpo">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:src="@mipmap/ic_banner_foreground">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:layout_gravity="center_vertical"
            android:textSize="35sp">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Search"
            android:layout_marginLeft="20dp">

        </TextView>
    </LinearLayout>
</FrameLayout>