<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".UI.Activities.SettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0.5dp"
        android:background="#000000">

        <LinearLayout
            android:id="@+id/root_Left"
            android:layout_width="196dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#000000"
            android:orientation="vertical">

            <Button
                android:id="@+id/membership_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:background="@drawable/button_focus"
                android:gravity="left|center_vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="Membership"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/parental_control_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_focus"
                android:gravity="left|center_vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="Parental Controls"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/contact_us_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_focus"
                android:gravity="left|center_vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="Contact Us"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/legal_notices_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_focus"
                android:gravity="left|center_vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="Legal Notices"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_focus"
                android:gravity="left|center_vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="Logout"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/root_right"
            android:layout_width="773dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#070707"
            android:gravity=""
            android:orientation="vertical">

            <TextView
                android:id="@+id/setting_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="24dp"
                android:text="Settings"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/settings_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="24dp"
                android:text="Text layout"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/banner_linear_layout"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:focusable="false"
        android:background="@color/transpo">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_gravity="top"
                android:layout_marginLeft="8dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@mipmap/ic_banner_foreground" />

            <fragment
                android:id="@+id/banner_fragment"
                android:name="com.example.myottapp.UI.Fragments.BannerFragment"
                android:layout_width="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_height="70dp"
                android:layout_gravity="left" />
        </FrameLayout>
    </FrameLayout>
</FrameLayout>